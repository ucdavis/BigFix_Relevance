#finds splunk installations on windows who have currently been configured for SSL
exists file (concatenation of (pathname of folder (value "InstallLocation" of keys whose (value "DisplayName" of it as string as lowercase contains "universalforwarder" as lowercase) of keys "HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Windows\CurrentVersion\Uninstall" of (if x64 of operating system then (x32 registry; x64 registry) else registry) as string)) & "\etc\system\local\outputs.conf") whose (exists (line of it) whose (it as string as lowercase contains "defaultGroup = splunkssl" as lowercase))
